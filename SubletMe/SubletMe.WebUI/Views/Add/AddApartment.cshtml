}

<script src="~/Content/AutoComplete.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".noResult").hide();

        AutoComplete("#City", "/Add/AddApartment", ".cityNoResult", "#Street", false);
        AutoComplete("#Street", "/Add/AddApartment", ".streetNoResult", "#Street", true);

        $('#City').bind('input', function () {
            $("#Street").prop("disabled", true);
            $("#Street").val("");
            $(".streetNoResult").hide();
        });
    })
</script>

