
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Add", FormMethod.Post)) {
    <div class="row">
        <div class="form-group">
            <div class="col-md-8">
                <select name="Type" class="form-control">
                    <option name="Type" value="Apartment">Apartment</option>
                    <option name="Type" value="Room">Room</option>
                </select>
            </div>

            <div class="col-md-4">
                <input type="submit" value="Choose" class="btn btn-default" style="width: 100%" />
            </div>
        </div>
    </div>
}

<div class="clearfix"></div>
